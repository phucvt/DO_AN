<div class="row">
  <div class="col col-md-2 navi">
    <ul class="nav nav-pills nav-stacked">
      <li>
        <%= link_to 'Bài đăng', list_post_path %>
        <%= link_to 'Tài khoản', users_path %>
        <li><%= link_to 'Khu vực', categories_path %></li>
      </li>
    </ul>
  </div>
  <div class="col col-md-10">
    <div class="row">
      <div class="col-md-4 col-md-offset-3">
        <h1>Danh sách tài khoản</h1>
      </div>
    </div>
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <div class="row">
            <div class="col-md-4">
              <%= gravatar_for user, size: 30 %>
              <%= user.name %>
            </div>
            <div class="col-md-6">             
            </div>
            <div class="col-md-2">
              <%= link_to signup_path do %><span class='glyphicon glyphicon-plus'></span><% end %>&nbsp;&nbsp;&nbsp;&nbsp;
              <%= link_to user, method: :delete, data: { confirm: "Bạn có muốn xóa?" } do %><span class='glyphicon glyphicon-remove'></span><% end %>
            </div>
          </div>    
        </li>
        <hr>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
    <%= will_paginate %>
  </div>
</div>
