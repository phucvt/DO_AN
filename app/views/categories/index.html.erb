<% provide(:title, "All users") %>
<div class="row">
  <div class="col col-md-2 navi">
    <ul class="nav nav-pills nav-stacked">
      <li>
        <%= link_to 'Bài đăng', list_post_path %>
        <%= link_to 'Tài khoản', users_path %>
        <li><%= link_to 'Khu vực', categories_path %></li>
      </li>
    </ul>
  </div>
  <div class="col col-md-10">
    <div class="row">
      <div class="col-md-4 col-md-offset-3">
        <h1>Danh sách khu vực</h1>
      </div>
    </div>
    <ul class="users">
      <% @categories.each do |category| %>
        <li>
          <div class="row">
            <div class="col-md-4">
              <%= category.name %>
            </div>
            <div class="col-md-5">             
            </div>
            <div class="col-md-3">
              <%= link_to new_category_path do %><span class='glyphicon glyphicon-plus'></span><% end %>&nbsp;&nbsp;&nbsp;&nbsp;
              <%= link_to edit_category_path(category) do %><span class='glyphicon glyphicon-pencil'></span><% end %>&nbsp;&nbsp;&nbsp;&nbsp;
              <%= link_to category, method: :delete, data: { confirm: "Bạn có muốn xóa?" } do %><span class='glyphicon glyphicon-remove'></span><% end %>
            </div>
          </div>    
        </li>
        <hr>
      <% end %>
    </ul>
  </div>
</div>
