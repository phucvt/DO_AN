<% provide(:title, 'Đăng bài') %>
<div class="container">
<div class="row">
<div class="col-md-2 post-id-image">
  <%= render 'shared/user_info' %>
</div>
<div class="col-md-9 description-para">
  <h1 style="text-align: center">Bài đăng</h1>
  <%= form_for(@post, html: { multipart: true }) do |f| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <strong>Loại tin</strong>
  <%= f.collection_select(:category_id, @categories, :id, :name, :include_blank => "Loại") %>
  <strong>Khu vực</strong>
  <%= f.collection_select(:location_id, @locations, :id, :location_name, :include_blank => "Khu vực") %>
  <strong>Tiêu đề</strong>
  <%= f.text_field :title, class: "form-control", placeholder: "input title"  %>
  <strong>Diện tích</strong>
  <%= f.text_field :area, class: "form-control", placeholder: "input area"  %>
  <strong>Giá cả</strong>
  <%= f.text_field :price, class: "form-control", placeholder: "input address"  %>
  <strong>Địa chỉ</strong>
  <%= f.text_field :address, class: "form-control", placeholder: "input address"  %>
  <strong>Mô tả</strong>
  <%= f.text_field :desc, class: "form-control", placeholder: "input descript"  %>
  <span class="picture">
  <%= f.file_field :picture, class: "picture", accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <p style="text-align: center;"><button type="submit" class="btn btn-primary btncreate">Đăng bài</button></p>
  <% end %>
  <script type="text/javascript">
    $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
    });
  </script>
</div>
</div>